<html>
   <head>
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200..800&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">  
   <link href="/stylesheets/project.css" rel="stylesheet"/>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
   <script src="/javascripts/project.js" ></script> 
</head>
<form action="/movie/movie_edit_delete" method="post">
   <input type="hidden" value="<%=data.movieid%>" name="movieid">
    <div class="maincontainer"> 
      <% if(status) { %>
    <div class="shadow p-3 mb-5 bg-white rounded box">
      <div class="container">

      <div class="row">
         <div class="col-sm-12">
            <div class="titlediv">
             <img src="/images/movies.png" class="imagesize"/>   
             <div class="heading">Movie Register</div>
             </div>

             <div style="display: flex;flex-direction: column;width:150px;background:grey;">
             <div class="divider"></div>
             <div style="color:#fff; align-self: center; font-size: 12px;font-weight:bold;letter-spacing: 1px;">EDIT MOVIES</div>
             </div>

            </div>
      </div>
      <div class="row" style="margin-top: 10px;">
         <div class="col-sm-4">
            <input required value="<%=data.moviename%>" name="moviename" type="txt" class="form-control" placeholder="Movie Name" >
         </div>
         <div class="col-sm-4">
            <select required name="stateid" id="state" class="form-select">
               <option selected value="<%=data.stateid %>"><%=data.statename %></option>
            </select>
         </div>

         <div  class="col-sm-4">
            <select required name="cityid" id="city" class="form-select">
               <option selected value="<%=data.cityid %>"><%=data.cityname %></option>
            </select>
         </div>

      </div>      
      

      <div  class="row" style="margin-top: 10px;">
         <div  class="col-sm-4">
            <select required name="cinemaid" id="cinema" class="form-select">
               <option selected value="<%=data.cinemaid %>"><%=data.cinemaname %></option>
            </select>
         </div>

         <div  class="col-sm-4">
            <select required  name="screenid" id="screen" class="form-select">
               <option selected value="<%=data.screenid %>"><%=data.screenname %></option>
            </select>
         </div>
         <div class="col-sm-4">
            <select required  name="status" class="form-select">
               <option selected><%=data.status %></option>
               <option >On Screen</option>
               <option  >Coming Soon</option>
               <option  >Off Screen</option>
             </select>
         </div>
      </div>   
      <div class="row" style="margin-top: 10px;">
         <div class="col-sm-12">
            <textarea name="description" class="form-control"  rows="2"><%=data.description %></textarea>
         </div>

      </div>   


      <div class="row" style="margin-top: 10px;">
         <div class="col-sm-4">
            <label  class="form-label">Movie Time</label>  
          <input required value="<%=data.movietime %>" name="movietime" type="time" class="form-control">  
         </div>
         <div class="col-sm-4">
            <label  class="form-label">Release Date</label>  
            <input  required value="<%=data.releasedate %>" name="releasedate" type="date" class="form-control">  
           </div>
           <div class="col-sm-4">
            <label  class="form-label">Director</label> 
            <input required value="<%=data.director %>" name="director" type="text" class="form-control" placeholder="Director">  
          </div>
      </div>

      <div class="row" style="margin-top: 10px;">
         
         <div class="col-sm-3">
            <input required value="<%=data.actor %>" name="actor" type="text" class="form-control" placeholder="Actor">  
          </div>
          <div class="col-sm-3">
            <input required value="<%=data.actress %>" name="actress" type="text" class="form-control" placeholder="Actress">  
          </div>
          <div class="col-sm-3">
            <input required value="<%=data.musicdirector %>" name="musicdirector" type="text" class="form-control" placeholder="Music Director">  
          </div>
          <div class="col-sm-3">
            <input required value="<%=data.lyrics %>" name="lyrics" type="text" class="form-control" placeholder="Lyrics">  
          </div>
 
      </div>


      
       
         <div class="row" style="margin-top: 10px;">
             <div class="col-sm-6" style="display: flex;justify-content: center;">
               <button value="Edit" name="btn" type="submit" class="btn btn-primary" style="height: 40px;width:50%">Edit</button>
              </div>
              <div class="col-sm-6" style="display: flex;justify-content: center;">
               <button value="Delete" name="btn" type="submit" class="btn btn-primary" style="height: 40px;width:50%">Delete</button>
              </div>
            
            </div>  
            


    </div>
    </div>
    <% }  else {%>
      <h2>Movie Id Does Not Exist....</h2>
      <% } %>
   </div>
   </form>

</html>